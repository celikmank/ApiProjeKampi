@model List<ApiProjeKampi.WebUı.Dtos.ProductDtos.ResultProductDto>

<div class="tab-content" data-aos="fade-up" data-aos-delay="200">

    <div class="tab-pane fade active show" id="menu-all">
        <div class="row gy-5">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 menu-item">
                    <a href="@product.ImageUrl" class="glightbox">
                        <img src="@product.ImageUrl" class="menu-img img-fluid" alt="">
                    </a>
                    <h4>@product.ProductName</h4>
                    <p class="ingredients">@product.ProductDescription</p>
                    <p class="price">@($"{product.Price} ₺")</p>
                </div>
            }
        </div>
    </div>

    @{
        var grouped = Model.GroupBy(p => p.CategoryId);
    }

    @foreach (var group in grouped)
    {
        <div class="tab-pane fade" id="menu-@group.Key">
            <div class="row gy-5">
                @foreach (var product in group)
                {
                    <div class="col-lg-4 menu-item">
                        <a href="@product.ImageUrl" class="glightbox">
                            <img src="@product.ImageUrl" class="menu-img img-fluid" alt="">
                        </a>
                        <h4>@product.ProductName</h4>
                        <p class="ingredients">@product.ProductDescription</p>
                        <p class="price">@($"{product.Price} ₺")</p>
                    </div>
                }
            </div>
        </div>
    }
</div>
